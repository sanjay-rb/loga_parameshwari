    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run",
            "type": "node-terminal",
            "command": "flutter run -v",
            "request": "launch",
        },
        {
            "name": "Release",
            "type": "node-terminal",
            "command": "flutter run -v --release",
            "request": "launch",
        },
        {
            "name": "Build",
            "type": "node-terminal",
            "command": "flutter build apk --split-per-abi --release",
            "request": "launch",
        },
        {
            "name": "Deploy",
            "type": "node-terminal",
            "command": "flutter build appbundle --release",
            "request": "launch",
        },
        {
            "name": "Clean",
            "type": "node-terminal",
            "command": "flutter clean",
            "request": "launch",
        }
    ]
}